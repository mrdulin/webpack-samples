{
	"compilerOptions": {
		"target": "ES2018",
		"module": "esnext",
		"lib": ["ES2018", "dom"],
		"sourceMap": false,
		"outDir": "./dist/",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
